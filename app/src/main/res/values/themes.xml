<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InPostRecruitmentTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarText">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="ShipmentHeader">
        <item name="android:textColor">@color/shipment_header</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="ShipmentBody">
        <item name="android:textColor">@color/shipment_items</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="ShipmentNumber">
        <item name="android:textColor">@color/shipment_items</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:lineHeight" tools:targetApi="p">24sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="ShipmentListHeader">
        <item name="android:textColor">@color/header_text</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:lineHeight" tools:targetApi="p">16sp</item>
        <item name="lineHeight">16sp</item>
    </style>
</resources>
